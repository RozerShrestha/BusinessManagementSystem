
<div class="row">
    <div class="col-xl-12">

        <div class="card">
            <div class="card-header">
                <h2>All Employees Information</h2>
                <div class="row">
                    <div class="col-md-3">
                        @if (User.IsInRole("hradmin"))
                        {
                            <input type="button" style="margin-top:31px" class="btn btn-success" value="Download Employee Details" onclick="window.location.href='@Url.Action("DownloadExcel", "Users")';" />
                        }
                    </div>
                    <div class="col-md-3">
                        <label for="EmployeeStatusFilter">Employee Status Filter</label>
                        @Html.DropDownList("EmployeeStatusFilter", new SelectListItem[]
                                 {
                                    new SelectListItem() { Text = "Active", Value = "Active" },
                                    new SelectListItem() { Text = "InActive", Value = "InActive" }
                                 },
                                 new { @onchange = "employeeStatusChange(this.value)", @class = "form-control" }

                                 )
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblEmployeeList" style="width:100%" class="table table-striped table-bordered table-sm">
                        <thead class="table-header">
                            <tr class="border-bottom-0 tr-header header">
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>INumber</th>
                                <th>Address</th>
                                <th>Date Of Birth</th>
                                <th>Mobile Number</th>
                                <Th>Status</Th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var datatable = null;
        $(document).ready(function () {
            loadDataTable('Active');
        });
        function loadDataTable(status) {
            if (datatable) {
                $("#tblEmployeeList").DataTable().destroy();
            }
            datatable = $("#tblEmployeeList").DataTable({
                fixHeader: {
                    header: true,
                    headerOffset: 50
                },
                autoWidth: true,
                lengthMenu: [[25, 50, -1], [25, 50, "All"]],
                "ajax": {
                    "url": `/Users/GetAllUser`,
                    "dataSrc": function (data) {
                        console.log(data);
                        return data.datas;
                    }
                },
                "columns": [
                    {
                        "data": "id",
                        "width": "10%"
                    },
                    {
                        "data": "fullName",
                    },
                    {
                        "data": "email",
                    },
                    {
                        "data": "iNumber",
                    },
                    {
                        "data": "address",
                    },
                    {
                        "data": "dateOfBrith",
                    },
                    {
                        "data": "mobileNumber",
                    },
                    {
                        "data": "status",
                    },
                    {
                        "data": "id",
                        "render": function (data) {
                            return `
                                        <div>
                                            <a href="/Users/edit?id=${data}"><i class="fas fa-edit"></i></i></a> |
                                            <a href="/Users/details?id=${data}"><i class="fas fa-eye"></i></i></a>

                                        </div>
                                    `
                        }
                    }
                ]
            });
        }
        function employeeStatusChange(status) {
            loadDataTable(status);
            //alert(status)
        }
    </script>
}