
<div class="row">
    <div class="col-xl-12">

        <div class="card">
            <div class="card-header">
                <h2>All Employees Information</h2>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblEmployeeList" style="width:100%" class="table table-striped table-bordered table-sm">
                        <thead class="table-header">
                            <tr class="border-bottom-0 tr-header header">
                                <th>ID</th>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Date Of Birth</th>
                                <th>Address</th>
                                <th>Gender</th>
                                <th>Mobile Number</th>
                                <th>Occupation</th>
                                <Th>Status</Th>
                                <th>Role</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        var datatable = null;
        $(document).ready(function () {
            loadDataTable('Active');
        });
        function loadDataTable(status) {
            if (datatable) {
                $("#tblEmployeeList").DataTable().destroy();
            }
            datatable = $("#tblEmployeeList").DataTable({
                fixHeader: {
                    header: true,
                    headerOffset: 50
                },
                autoWidth: true,
                lengthMenu: [[25, 50, -1], [25, 50, "All"]],
                "ajax": {
                    "url": `/Users/GetAllUser`,
                    "dataSrc": function (data) {
                        // console.log(data);
                        // return data.datas;
                        return data.datas.map(function (item) {
                            item.user.roleName=item.roleName
                            return item.user;
                        });
                    }
                },
                "columns": [
                    {
                        "data": "id",
                    },
                    {
                        "data": "fullName",
                    },
                    {
                        "data": "email",
                    },
                    {
                        "data": "dateOfBirth",
                    },
                    {
                        "data": "address",
                    },
                    {
                        "data": "gender",
                    },
                    {
                        "data": "phoneNumber",
                    },
                    {
                        "data": "occupation",
                    },
                    {
                        "data": "status",
                    },
                    {
                        "data": "roleName",
                    },
                    {
                        "data": "guid",
                        "render": function (data) {
                            return `
                                        <div>
                                            <a href="/Users/edit?guid=${data}"><i class="fas fa-edit"></i></i></a> |
                                            <a href="/Users/detail?guid=${data}"><i class="fas fa-eye"></i></i></a>
                                                    <a href="/Users/Delete?guid=${data}"><i class="fas fa-trash-alt"></i></i></a>

                                        </div>
                                    `
                        }
                    }
                ]
            });
        }
        function employeeStatusChange(status) {
            loadDataTable(status);
            //alert(status)
        }
    </script>
}