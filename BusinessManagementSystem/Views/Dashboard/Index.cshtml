@model BusinessManagementSystem.ViewModels.DashboardVM
<div class="row">
    <div class="col-md-12">
        <div class="card card-outline card-dark">
            <div class="card-header">
                <h3 class="card-title">All Appointments</h3>
            </div>
            <div class="card-body">
                <div class="row">
