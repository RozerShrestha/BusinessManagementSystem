@model BusinessManagementSystem.Models.BasicConfiguration
<br />
<h4>Basic Configuration</h4>
<hr />
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="col-md-12">
        <div class="card card-purple card-outline">
            <div class="card-header">
                <h3 class="card-title">General Configuration</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="ApplicationTitle"></label>
                        <input asp-for="ApplicationTitle" class="form-control">
                        <span asp-validation-for="ApplicationTitle" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EmployerName"></label>
                        <input asp-for="EmployerName" class="form-control">
                        <span asp-validation-for="EmployerName" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="InsuranceCompanyName"></label>
                        <input asp-for="InsuranceCompanyName" class="form-control">
                        <span asp-validation-for="InsuranceCompanyName" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="GroupPolicyNumber"></label>
                        <input asp-for="GroupPolicyNumber" class="form-control">
                        <span asp-validation-for="GroupPolicyNumber" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EmployerEmailAddress"></label>
                        <input asp-for="EmployerEmailAddress" class="form-control">
                        <span asp-validation-for="EmployerEmailAddress" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="EmployerAddress"></label>
                        <input asp-for="EmployerAddress" class="form-control">
                        <span asp-validation-for="EmployerAddress" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="ShowProductWalkThrough"></label>
                        @Html.DropDownListFor(m => m.ShowProductWalkThrough, new List<SelectListItem>
                        {
                           new SelectListItem{ Value="true", Text="Show" },
                           new SelectListItem{ Value="false", Text="Donot Show" },
                        }, htmlAttributes: new { @class = "form-control" })
                        <span asp-validation-for="ShowProductWalkThrough" class="text-sm-center"></span>
                    </div>

                    <div class="col-md-3">
                        <label asp-for="InsurancePolicyDoc1"></label>
                        <input name="InsurancePolicyDoc1" class="form-control" type="file" />
                        @Model.InsurancePolicyDoc1
                    </div>
                    <div class="col-md-3">
                        <label asp-for="InsurancePolicyDoc2"></label>
                        <input name="InsurancePolicyDoc2" class="form-control" type="file" />
                        @Model.InsurancePolicyDoc2
                    </div>
                    <div class="col-md-3">
                        <label asp-for="InsurancePolicyDoc3"></label>
                        <input name="InsurancePolicyDoc3" class="form-control" type="file" />
                        @Model.InsurancePolicyDoc3
                    </div>
                    <div class="col-md-3">
                        <label asp-for="InsurancePolicyDoc4"></label>
                        <input name="InsurancePolicyDoc4" class="form-control" type="file" />
                        @Model.InsurancePolicyDoc4
                    </div>
                    <div class="col-md-3">
                        <label asp-for="InsurancePolicyDoc5"></label>
                        <input name="InsurancePolicyDoc5" class="form-control" type="file" />
                        @Model.InsurancePolicyDoc5
                    </div>
                    <div class="col-md-3">
                        <label asp-for="OtherDocLink"></label>
                        <input name="OtherDocLink" class="form-control" type="file" />
                        @Model.OtherDocLink
                    </div>
                </div>
            </div>
        </div>
        <div class="card card-purple card-outline">
            <div class="card-header">
                <h3 class="card-title">Email Configuration</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3">
                        <label asp-for="EmailAlias"></label>
                        <input asp-for="EmailAlias" class="form-control">
                        <span asp-validation-for="EmailAlias" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Email"></label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-2">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="HostName"></label>
                        <input asp-for="HostName" class="form-control">
                        <span asp-validation-for="HostName" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-1">
                        <label asp-for="Port"></label>
                        <input asp-for="Port" class="form-control">
                        <span asp-validation-for="Port" class="text-sm-center"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="EmailTemplateCreate" class="control-label"></label>
                        @*<input type="" asp-for="MedicalInsuranceClaimForm.FullDetailNatureOfInjuries" class="form-control" />*@
                        @Html.TextAreaFor(m => m.EmailTemplateCreate, new { @class = "form-control" })
                        <span asp-validation-for="EmailTemplateCreate" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="EmailTemplateUpdate" class="control-label"></label>
                        @*<input type="" asp-for="MedicalInsuranceClaimForm.FullDetailNatureOfInjuries" class="form-control" />*@
                        @Html.TextAreaFor(m => m.EmailTemplateUpdate, new { @class = "form-control" })
                        <span asp-validation-for="EmailTemplateUpdate" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="EmailTemplateInsurancePlanChanged" class="control-label"></label>
                        @*<input type="" asp-for="MedicalInsuranceClaimForm.FullDetailNatureOfInjuries" class="form-control" />*@
                        @Html.TextAreaFor(m => m.EmailTemplateInsurancePlanChanged, new { @class = "form-control" })
                        <span asp-validation-for="EmailTemplateInsurancePlanChanged" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="EmailTemplateFamilyUpdated" class="control-label"></label>
                        @*<input type="" asp-for="MedicalInsuranceClaimForm.FullDetailNatureOfInjuries" class="form-control" />*@
                        @Html.TextAreaFor(m => m.EmailTemplateFamilyUpdated, new { @class = "form-control" })
                        <span asp-validation-for="EmailTemplateFamilyUpdated" class="text-danger"></span>
                    </div>
                    <div class="col-md-12">
                        <label asp-for="HrApproveTemplate" class="control-label"></label>
                        @*<input type="" asp-for="MedicalInsuranceClaimForm.FullDetailNatureOfInjuries" class="form-control" />*@
                        @Html.TextAreaFor(m => m.HrApproveTemplate, new { @class = "form-control" })
                        <span asp-validation-for="HrApproveTemplate" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div col-md-12>
        <div class="m-3">
            <input type="submit" value="Save" class="btn btn-success" />
        </div>
    </div>
</form>