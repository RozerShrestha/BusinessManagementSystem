<div class="row">
    <div class="col-xl-12">
        <div class="card card-dark card-outline">
            <div class="card-header">
                <div class="card-title">
                    <h3>My Tips</h3>
                </div>
            </div>
            <div class="card-body">
                <partial name="_DateRangeFilter" />
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblTipList" style="width:100%" class="table table-striped table-bordered table-sm">
                        <thead class="table-header">
                            <tr class="border-bottom-0 tr-header header">
                                <th>Tip Id</th>
                                <th>Appointment Id</th>
                                <th>Tip Amount</th>
                                <th>Tip Amount For Users</th>
                                <th>TipAssigned To User</th>
                                <th>Tip Created</th>
                                <th>Tip Settlement</th>
                                <th>Appointment Link</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_ModalView" />

@section Scripts {
    <script>
        var datatable = null;
        $(document).ready(function () {
            loadDataTable();
            $("#btnFilterLoad").on("click", function (e) {
                e.preventDefault(); // Prevent form submission if the button is inside a form
                loadDataTable();
            });
        });
        function loadDataTable() {
            const requestDto = {
                StartDate: $("#StartDate").val(),
                EndDate: $("#EndDate").val(),
                Status: $("#Status").val()
            };
            if (datatable) {
                $("#tblTipList").DataTable().destroy();
            }
            datatable = $("#tblTipList").DataTable({
                fixHeader: {
                    header: true,
                    headerOffset: 50
                },
                autoWidth: true,
                lengthMenu: [[25, 50, -1], [25, 50, "All"]],
                ajax: {
                    url: '/Tip/GetMyTips',
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    data: function () {
                        return JSON.stringify(requestDto);
                    },
                    dataSrc: '' // Optional, if response is an array
                },
                columns: [
                    { 'data': 'tipId' },
                    { 'data': 'appointmentId' },
                    { 'data': 'tipAmount' },
                    { 'data': 'tipAmountForUsers' },
                    { 'data': 'tipAssignedToUserFullName' },
                    {
                        'data': 'createdAt',
                        'render': function (data) {
                            return formatDate(data);
                        }
                    },
                    { 'data': 'tipSettlement' },
                    {
                        'data': 'appointmentGuid',
                        'render': function (data) {
                            return `
                                            <div>
                                                <a href="/Appointment/detail?guid=${data}" target = "_blank"><i class="fas fa-eye"></i></i></a>
                                            </div>
                                            `
                        }
                    }
                ]
            });
        }
    </script>
}