<div class="row">
    <div class="col-xl-12">
        <div class="card">
            <div class="card-header">
                <div class="card-title">
                    <h3>All Payments</h3>
                </div>
            </div>
            <div class="card-body">
                <partial name="_DateRangeFilter" />
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="tblAllPaymentList" style="width:100%" class="table table-striped table-bordered table-sm">
                        <thead class="table-header">
                            <tr class="border-bottom-0 tr-header header">
                                <th>Appointment Id</th>
                                <th>Artist Name</th>
                                <th>Deposit</th>
                                <th>Discount</th>
                                <th>Discount In Hour</th>
                                <th>Total Cost</th>
                                <th>Payment To Studio</th>
                                <th>Payment To Artist</th>
                                <th>Payment Method</th>
                                <th>Appointment Status</th>
                                <th>Updated Date</th>
                                <Th>Payment Settlement</Th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="_ModalView" />

@section Scripts {
    <script>
        var datatable = null;
        $(document).ready(function () {
            loadDataTable();
            $("#btnFilterLoad").on("click", function (e) {
                e.preventDefault(); // Prevent form submission if the button is inside a form
                loadDataTable();
            });
        });
        function loadDataTable() {
            const requestDto = {
                StartDate: $("#StartDate").val(),
                EndDate: $("#EndDate").val(),
                Status: $("#Status").val()
            };
            if (datatable) {
                $("#tblAllPaymentList").DataTable().destroy();
            }
            datatable = $("#tblAllPaymentList").DataTable({
                fixHeader: {
                    header: true,
                    headerOffset: 50
                },
                autoWidth: true,
                lengthMenu: [[25, 50, -1], [25, 50, "All"]],
                ajax: {
                    url: `/Payment/GetAllPayments`,
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    data: function () {
                        return JSON.stringify(requestDto);
                    },
                    dataSrc: "" // Optional, if response is an array
                },
                columns: [
                    {'data': 'appointmentId'},
                    {'data': 'artistName'},
                    {'data': 'deposit'},
                    {'data': 'discount'},
                    {'data': 'discountInHour'},
                    {'data': 'totalCost'},
                    {'data': 'paymentToStudio'},
                    {'data': 'paymentToArtist'},
                    {'data': 'paymentMethod'},
                    {'data': 'appointmentStatus'},
                    {
                        'data': 'paymentDate',
                        'render': function (data) {
                            return formatDate(data);
                        }
                    },
                    {'data': 'paymentSettlement'},
                    {
                        'data': 'appointmentGuid',
                        'render': function (data) {
                            return `
                                    <div>
                                        <a href="/Appointment/detail?guid=${data}"><i class="fas fa-eye"></i></i></a>
                                    </div>
                                  `
                        }
                    }
                ],
                'createdRow': function (row, data, dataIndex) {
                    if (data.status === 'Completed') {
                        $(row).css('color', 'green'); // Hghlight row in green 
                    }
                    else if(data.status=='Cancelled'){
                        $(row).css('color', 'red'); // Hghlight row in green 
                    }
                }
            });
        }
    </script>
}